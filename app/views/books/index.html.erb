<div class="main-box">

  <div class="index-box">

    <p class="success"><%= flash[:notice] %></p>
    <h2>Books</h2>

    <table>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book) %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
      </tr>
      <% end %>
    </table>
  </div>



  <div class="new-box">
    <h2>New book</h2>
    <%= form_with model:@book, local:true do |f| %>

      <div class="errors">
        <% if @book.errors.any? %>
          <%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:
            <br>
            <% @book.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
      </div>



      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Body</h4>
      <%= f.text_area :body %>
      <br>
      <%= f.submit 'Create Book' %>

    <% end %>
  </div>


</div>